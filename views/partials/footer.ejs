<script src="/semantic/jquery-3.1.1.min.js"></script>
<script src="/semantic/semantic.min.js"></script>
<script>
  $('.ui.secondary.menu a').each((index, one) => {
    if ($(one).attr('href') === location.pathname) {
      $(one).addClass('active');
    }
  });

  document
    .getElementsByName('search')[0]
    .addEventListener('keypress', function(event) {
      if (event.key === 'Enter') {
        console.log('yes');
        window.location.assign('/search?q=' + event.target.value);
      }
    });
</script>
